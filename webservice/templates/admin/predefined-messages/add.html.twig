{% extends 'layout.html.twig' %}

{% block title %}{% trans %}Predefined Messages{% endtrans %} - {% trans %}Add{% endtrans %}{% endblock %}

{% block main %}
	<main class="main-container mx-auto p-4">
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="{{ path('web_admin_home') }}">{% trans %}Administration{% endtrans %}</a></li>
				<li class="breadcrumb-item"><a href="{{ path('web_admin_predefined_messages_overview') }}">{% trans %}Predefined Messages{% endtrans %}</a></li>
				<li class="breadcrumb-item active" aria-current="page">{% trans %}Add{% endtrans %}</li>
			</ol>
		</nav>

		<h1>{% trans %}Add Predefined Message{% endtrans %}</h1>

		<div class="mt-4">
			{{ form_start(form) }}

			<div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.title) }}
				</div>
				<div class="col-md-6 mb-3">
					{{ form_row(form.priority) }}
				</div>
			</div>

			<div class="mb-3">
				{{ form_row(form.messageContent) }}
			</div>

			<div class="mb-3">
				{{ component('RecipientSelector', {
					fieldName: form.recipientIds.vars.full_name,
					selectedRecipients: []
				}) }}
				{% do form.recipientIds.setRendered %}
			</div>

			<div class="row">
				<div class="col-md-4 mb-3">
					{{ form_row(form.isFavorite) }}
				</div>
				<div class="col-md-4 mb-3">
					{{ form_row(form.sortOrder) }}
				</div>
				<div class="col-md-4 mb-3">
					{{ form_row(form.isEnabled) }}
				</div>
			</div>

			<div class="mt-3">
				{{ form_row(form.save) }}
			</div>

			{{ form_end(form) }}
		</div>
	</main>
{% endblock %}
