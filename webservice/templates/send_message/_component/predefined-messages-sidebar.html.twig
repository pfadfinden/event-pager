<aside{{ attributes }} class="predefined-messages-sidebar bg-body-tertiary p-3 w-100 h-100">
    <div class="predefined-messages-sidebar__header d-flex flex-wrap gap-2 align-items-center mb-3">
        <h3 class="h3-productive mb-0 flex-grow-1">{% trans %}Predefined Messages{% endtrans %}</h3>

        <div class="input-group d-none d-js-required" style="width: auto; min-width: 150px; max-width: 250px;">
            <span class="input-group-text">
                <twig:ux:icon name="bi:search" height="16" width="16" aria-hidden="true" class="bi"/>
            </span>
            <input name="q" data-model="q" type="search" class="form-control form-control-sm" placeholder="{{ 'Search...'|trans }}" aria-label="{{ 'Search'|trans }}">
        </div>
    </div>

    <nav class="predefined-messages-sidebar__nav" role="menubar">
        {% for message in computed.messages %}
            <a role="menuitem" href="{{ path('App\\View\\Web\\SendMessage\\SendMessageController', {predefined: message.id}) }}"
               class="predefined-messages-sidebar__item border rounded fw-bold d-flex align-items-center text-decoration-none text-body"
               data-predefined-shortcut="{{ loop.index }}">
                <span class="p-2 px-3 bg-body rounded-start d-none d-sm-inline  d-js-required">
                    {{ loop.index < 10 ? loop.index : ''}}
                </span>
                <span class="p-2 px-3 text-truncate">{{ message.title }}</span>
            </a>
        {% else %}
            <p class="text-muted small">
                {% if computed.hasSearchQuery %}
                    {% trans %}No messages found{% endtrans %}
                 {% else %}
                     {% trans %}No favorite messages configured{% endtrans %}
                {% endif %}
            </p>
        {% endfor %}
    </nav>
    <p class="text-muted small mb-0 mt-2 d-none d-xl-block">
        <twig:ux:icon name="bi:keyboard" height="14" width="14" aria-hidden="true" class="bi me-1"/>
        {% trans %}Press number to select{% endtrans %}
    </p>
</aside>
