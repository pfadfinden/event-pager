{% extends 'layout.html.twig' %}

{% block title %}{% trans %}Pager Administration{% endtrans %} - {% trans %}Add Pager{% endtrans %}{% endblock %}

{% block main %}
	<main class="main-container mx-auto p-4">
		<h1>{% trans %}Pagerverwaltung{% endtrans %}</h1>
		<h2>{{ pager.number| format_number({min_integer_digit:'2'}) }}: {{ pager.label }}</h2>
		<h3>Edit Slot Assignment #{{ iSlot + 1 }}</h3>

		<div class="d-flex gap-3 mt-4">
			{{ form_start(form) }}
			<div class="my-custom-class-for-errors">
				{{ form_errors(form) }}
			</div>

			<div class="row">
				<div class="col">
					{{ form_row(form.assignment_type) }}
				</div>
			</div>

			<fieldset class="form-fieldset">

				<legend>{% trans %}Channel Assignment{% endtrans %}</legend>
				<div class="row">
					<div class="col">
						{{ form_row(form.channel_id) }}
					</div>
				</div>
			</fieldset>

			<fieldset class="form-fieldset">

				<legend>{% trans %}Individual Assignment{% endtrans %}</legend>
				<div class="row">
					<div class="col">
						{{ form_row(form.cap_code) }}
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{ form_row(form.audible) }}
					</div>
					<div class="col">
						{{ form_row(form.vibration) }}
					</div>
				</div>
			</fieldset>

			{{ form_rest(form) }}
{{ form_end(form) }}
		</div>
	</main>
{% endblock %}
