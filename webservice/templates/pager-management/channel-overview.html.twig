{% extends 'layout.html.twig' %}

{% block title %}Pagerverwaltung{% endblock %}

{% block main %}
	<main class="main-container mx-auto p-4">
		<h1>Pagerverwaltung</h1>


		<div class="d-flex gap-3 mt-4">
			<h2>Channel</h2>
		</div>
		<div class="d-flex gap-3 mb-3 mt-3">
			<div class="btn-group">
				<a href="{{ path('web_pager_management_pager') }}" class="btn btn-primary" title="Pager">
					<twig:ux:icon name="bi:tablet-landscape-fill" height="16" width="16" aria-hidden="true" class="bi"/>
				</a>
				<a href="{{ path('web_pager_management_channel') }}" class="btn active btn-primary" title="Channel">
					<twig:ux:icon name="bi:broadcast" height="16" width="16" aria-hidden="true" class="bi"/>
				</a>
			</div>
			<div>
				<a href="{{ path('web_pager_management_channel_add') }}" class="btn btn-secondary" title="Add">
					<twig:ux:icon name="bi:plus" height="16" width="16" aria-hidden="true" class="bi"/>
				</a>
			</div>

			<div class="input-group flex-grow-1">
				<span class="input-group-text" id="basic-addon2">
					<twig:ux:icon name="bi:search" height="16" width="16" aria-hidden="true" class="bi"/>
				</span>
				<input type="text" class="form-control" placeholder="Suche" aria-label="Recipient's username" aria-describedby="basic-addon2">

			</div>
		</div>
		<div class="table-responsive">

			<table class="table table-hover align-middle">
				<thead>
					<tr>
						<th scope="col"><input class="form-check-input" type="checkbox" id="checkboxNoLabel" value="" aria-label="select all"/></th>
						<th scope="col">Name</th>
						<th scope="col">Cap Code</th>
						<th scope="col">Audible</th>
						<th scope="col">Vibration</th>
						<th scope="col">Aktionen</th>
					</tr>
				</thead>
				<tbody class="table-group-divider">

				{% for c in channel %}
					<tr>
						<th>
							<input class="form-check-input" type="checkbox" id="checkboxNoLabel" value="" aria-label="..."/></th>
						<th scope="row">{{ c.name }}</th>
						<td>{{ c.capCode }}</td>
						<td>{{ c.audible ? 'Yes' : 'No' }}</td>
						<td>{{  c.vibration ? 'Yes' : 'No' }}</td>
						<td>
							<a href="{{ path('web_pager_management_channel_details', {id: c.id} ) }}" class="btn btn-outline-primary btn-sm">
								<twig:ux:icon name="bi:eye" height="16" width="16" aria-hidden="true" class="bi"/>
							</a>
							<a href="{{ path('web_pager_management_channel_edit', {id: c.id} ) }}" class="btn btn-outline-primary btn-sm">
								<twig:ux:icon name="bi:pencil" height="16" width="16" aria-hidden="true" class="bi"/>
							</a>
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
	</main>
{% endblock %}
