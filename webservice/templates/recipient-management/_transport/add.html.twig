{% extends 'layout.html.twig' %}

{% block title %}{% trans %}Add Transport Configuration{% endtrans %} - {{ recipient.name }}{% endblock %}

{% block main %}
    <main class="main-container mx-auto p-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('web_recipient_management_overview') }}">{% trans %}Recipients{% endtrans %}</a></li>
                <li class="breadcrumb-item">
                    {% if recipientType == 'person' %}
                        <a href="{{ path('web_recipient_management_person_details', {id: recipient.id}) }}">{{ recipient.name }}</a>
                    {% elseif recipientType == 'group' %}
                        <a href="{{ path('web_recipient_management_group_details', {id: recipient.id}) }}">{{ recipient.name }}</a>
                    {% elseif recipientType == 'role' %}
                        <a href="{{ path('web_recipient_management_role_details', {id: recipient.id}) }}">{{ recipient.name }}</a>
                    {% endif %}
                </li>
                <li class="breadcrumb-item active" aria-current="page">{% trans %}Add Transport Configuration{% endtrans %}</li>
            </ol>
        </nav>

        <h1>{% trans %}Add Transport Configuration{% endtrans %}</h1>
        <p class="text-muted">{% trans %}Configure a transport for{% endtrans %} <strong>{{ recipient.name }}</strong></p>

        <div class="row">
            <div class="col-12 col-md-8 col-lg-6">
                {{ form_start(form) }}
                {{ form_errors(form) }}

                <div class="mb-3">
                    {{ form_row(form.transportKey) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.isEnabled) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.vendorSpecificConfig) }}
                    <div class="form-text">{% trans %}Enter valid JSON configuration data, or leave empty.{% endtrans %}</div>
                </div>

                <div class="d-flex gap-2">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                    {% if recipientType == 'person' %}
                        <a href="{{ path('web_recipient_management_person_details', {id: recipient.id}) }}" class="btn btn-outline-secondary">{% trans %}Cancel{% endtrans %}</a>
                    {% elseif recipientType == 'group' %}
                        <a href="{{ path('web_recipient_management_group_details', {id: recipient.id}) }}" class="btn btn-outline-secondary">{% trans %}Cancel{% endtrans %}</a>
                    {% elseif recipientType == 'role' %}
                        <a href="{{ path('web_recipient_management_role_details', {id: recipient.id}) }}" class="btn btn-outline-secondary">{% trans %}Cancel{% endtrans %}</a>
                    {% endif %}
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </main>
{% endblock %}
